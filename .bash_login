#!/usr/bin/env bash

alias cfg='git --git-dir="$HOME/cfg.git/" --work-tree="$HOME"'

if [ -f "$HOME/.profile" ]; then
	. "$HOME/.profile"
fi

export PATH="$PATH:/$HOME/go/bin:/$HOME/.cargo/bin"

alias v="nvim"
alias d="docker"
alias dc="docker compose"
alias k="kubectl"
alias ksc="k config use-context"
alias ksn="k config set-context --current --namespace"
alias kz="kustomize"
alias kb="kustomize build"
alias tf="terraform"

alias bat="batcat"
alias fd="fdfind"
alias ls="lsd"
alias gu="gitui"

alias sf='fd --type f --hidden --exclude .git --print0 | fzf -- --read0 --print0 --exit-0 --preview "batcat --color=always --style=numbers --line-range=:500 {}" | xargs -r -0 -o ${EDITOR:-vim}'

export EDITOR=nvim
export MANPAGER="batcat --language man --style plain"

eval "$(starship init bash)"
eval "$(broot --print-shell-function bash)"
