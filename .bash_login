#!/usr/bin/env bash

if [ -f "$HOME/.profile" ]; then
  . "$HOME/.profile"
fi

alias cfg='git --git-dir="$HOME/cfg.git/" --work-tree="$HOME"'
alias v="nvim"
alias d="docker"
alias dc="docker compose"
alias k="kubectl"
alias ksc="k config use-context"
alias ksn="k config set-context --current --namespace"
alias kz="kustomize"
alias kb="kustomize build"
alias tf="terraform"
alias sf='fd --type f --hidden --exclude .git --print0 | fzf-tmux -p -- --read0 --print0 --exit-0 | xargs -r -0 -o ${EDITOR:-vim}'
alias l="lazygit"

eval "$(starship init bash)"

export EDITOR=nvim
